<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Task Planner</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
        <a class="navbar-brand" href="/">TaskPlannerWeb</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Task/Index">Task List</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/Task/AddTask">Add Task</a>
                </li>
                @if (TaskPlannerWeb.Controllers.AccountController.GetLoggedInUser() == null)
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary text-white mx-2" href="/Account/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-success text-white" href="/Account/Login">Login</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger text-white" href="/Account/Logout">Logout</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>

<div class="container mt-4">
    @RenderBody()
</div>

<footer class="text-center text-muted mt-4 py-3">
    &copy; 2025 - TaskPlannerWeb
</footer>

</body>
</html>